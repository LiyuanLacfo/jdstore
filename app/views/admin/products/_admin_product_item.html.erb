<tr>
	<td>#</td>
	<td><%= link_to(product.title, admin_product_path(product)) %></td>
	<td><%= product.description %></td>
	<td><%= product.price %></td>
	<td><%= product.storage %></td>
	<td id="table-operation">
		<%= link_to(edit_admin_product_path(product), class: "btn btn-primary btn-sm") do %><i class="fa fa-pencil-square-o" aria-hidden="true"></i><% end %> |
		<%= link_to(admin_product_path(product), class: "btn btn-primary btn-sm", method: :delete, data: { confirm: "Are you sure?" }) do %><i class="fa fa-trash-o" aria-hidden="true"></i><% end %> |
		<%= link_to(edit_admin_product_path(product), class: "btn btn-primary btn-sm") do %><i class="fa fa-pencil-square-o" aria-hidden="true"></i><% end %>
	</td>
</tr>